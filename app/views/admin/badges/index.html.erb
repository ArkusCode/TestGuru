<h1 class="text-center font-weight-normal"><%= t('.header') %></h1>
<div class="mt-3">

  <p>
    <%= link_to t('.new_badge'), new_admin_badge_path, class: 'badge badge-secondary' %>
  </p>

  <table class="table table-hover table-bordered">
    <tr class="table-primary">
      <th><%= t('.badge_icon') %></th>
      <th><%= t('.badge_name') %></th>
      <th colspan="3" class="text-center"><%= t('.badge_actions') %></th>
    </tr>

    <%= render @badges %>
  </table>
  <p>
    <%= link_to t('.back'), :back, class: 'badge badge-secondary' %>
  </p>
</div>
