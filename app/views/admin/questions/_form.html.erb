<%= form_with model: [:admin, test, question], local: true do |form| %>
  <p>
    <%= render 'shared/errors', resourse: question %>
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :question_body, rows: 7, cols: 60 %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to t('admin.back_link'), admin_test_path(question.test) %>
