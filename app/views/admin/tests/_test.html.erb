<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test) %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= link_to t('admin.show_link'), admin_test_path(test), class: 'badge badge-primary' %></td>
  <td class="align-middle">
    <%= link_to t('admin.edit_link'),
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: 'form-inline-link badge badge-primary' %>
  </td>
  <td class="align-middle">
    <%= link_to t('admin.delete_link'),
                admin_test_path(test),
                class: 'badge badge-primary',
                method: :delete,
                data: { confirm: t('admin.confirm') } %>
  </td>
</tr>
