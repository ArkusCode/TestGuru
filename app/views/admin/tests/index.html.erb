<h1 class="text-center font-weight-normal"><%= t('.header') %></h1>
<div class="row mt-3">
  <p>
    <%= link_to t('.new_test'), new_admin_test_path, class: 'badge badge-secondary' %>
  </p>

  <table class="table table-hover table-bordered">
    <tr class="table-primary">
      <th class="sort-by-title pointer">
        <%= t('.test_title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.test_level') %></th>
      <th><%= t('.test_questions') %></th>
      <th colspan="3" class="text-center"><%= t('.test_actions') %></th>
    </tr>

    <%= render @tests %>
  </table>
  <p>
    <%= link_to 'Gists', admin_gists_path, class: 'badge badge-secondary' %>
  </p>
</div>
