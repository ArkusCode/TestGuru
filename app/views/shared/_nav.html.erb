<nav class="navbar">
  <%= link_to 'TestGuru', root_path, class: 'navbar-brand' %>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <%= t('admin.welcome') %>, <b><%= current_user.first_name %></b>
      <%= link_to t('.badges'), badges_path, class: 'badge badge-primary' %>
      <%= link_to t('.admin_nav'), admin_tests_path, class: 'badge badge-primary' if current_user&.admin? %>
