<% if user_signed_in? %>
  <p class= "nav user">
    Welcome, <b><%= current_user.first_name %></b> Guru<br>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
  </p>
<% else %>
  <p class= "nav user">
    Welcome Guru, login to use all features!<br>
    <%= link_to 'SignIn', new_user_session_path %> |
    <%= link_to 'SignUp', new_user_registration_path %>
  </p>
<% end %>
