<h1>Welcome to TestGuru!</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Questions</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test_level(test) %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to 'Show', test_path(test) %></td>
      <td><%= button_to 'Start', start_test_path(test) if logged_in? %></td>
    </tr>
  <% end %>
</table>
